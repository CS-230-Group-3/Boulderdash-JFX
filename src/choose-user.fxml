<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="selectProfile" style="-fx-background-image: resources\entryWay2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserSelectController">
    <top>
        <Label text="Select Profile" textFill="#ae0017" BorderPane.alignment="CENTER">
            <font>
                <Font name="SimSun" size="36.0" />
            </font>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </Label>
    </top>
    <center>
        <ListView fx:id="userList" editable="true" prefWidth="225.0" stylesheets="@resources/style.css" BorderPane.alignment="CENTER">
            <style>-fx-font-family: "SimSun";
                -fx-text-fill: #ae0017;-fx-font-size: 30; -fx-background-color: transparent; -fx-background-image: url('/resources/entryWay2.jpg'); -fx-background-position: center; -fx-background-size: cover; -fx-background-color: transparent;</style>
         <effect>
            <Glow level="0.48" />
         </effect>
        </ListView>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="newProfileButton" style="-fx-background-color: #ae0017; -fx-background-radius: 5;" text="NEW PROFILE">
               <font>
                  <Font name="SimSun" size="14.0" />
               </font></Button>
                <Button fx:id="selectButton" style="-fx-background-color: #ae0017; -fx-background-radius: 5;" text="SELECT">
               <font>
                  <Font name="SimSun" size="14.0" />
               </font></Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
